<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ArcProgressBar">
        <!--是否开启抗锯齿-->
        <attr name="isAntialiasing" format="boolean" />
        <!--进度条最大值-->
        <attr name="maxValue" format="float" />
        <!--进度条当前值-->
        <attr name="currentValue" format="float" />
        <!-- 刻度之间的间隔 -->
        <attr name="calibrationInterval" format="integer" />
        <!-- 圆弧的宽度 -->
        <attr name="arcWidth" format="dimension" />
        <!-- 圆弧起始角度，3点钟方向为0，顺时针递增，小于0或大于360进行取余 -->
        <attr name="startAngle" format="float" />
        <!-- 圆弧度数 -->
        <attr name="sweepAngle" format="float" />
        <!-- 设置改变进度的动画时间 -->
        <attr name="animTime" format="integer" />
        <!-- 背景圆弧颜色 -->
        <attr name="bgArcColor" format="color|reference" />
        <!-- 进度圆弧颜色 -->
        <attr name="arcColors" format="color|reference" />
        <!-- 刻度的宽度 -->
        <attr name="calibrationWidth" format="dimension|reference" />
        <!-- 刻度的颜色 -->
        <attr name="calibrationColor" format="color|reference" />
    </declare-styleable>
</resources>